<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".WorldData"
    android:background="@drawable/covidback">

    <TextView
        android:id="@+id/StatewiseHead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/statewiseHead"
        android:textColor="@color/design_default_color_error"
        android:textSize="40sp"
        android:textStyle="bold|italic|normal"
        app:layout_constraintBottom_toTopOf="@+id/statesEntry"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.355"/>

    <ListView
        android:id="@+id/statesEntry"
        android:layout_width="411dp"
        android:layout_height="569dp"
        android:layout_marginBottom="80dp"
        android:divider="@color/white"
        android:dividerHeight=".5sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>